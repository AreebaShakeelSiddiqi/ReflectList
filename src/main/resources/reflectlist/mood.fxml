<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="reflectlist.MoodController"
            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDF2F8, #ECFEFF);"
            prefWidth="1100" prefHeight="750">

    <!-- Center VBox for content -->
    <VBox fx:id="centerVBox" spacing="30" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="100" alignment="CENTER">

        <!-- Mood Title -->
        <Label fx:id="moodLabel"
               text="Mood Name"
               style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #1F2937;"/>

        <!-- Ayat Card -->
        <VBox spacing="12"
              alignment="CENTER"
              style="-fx-background-color: #FFFFFF; -fx-padding: 25; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);"
              maxWidth="850">

            <Label text="Ayat"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #9D174D;"/>

            <Label fx:id="ayatLabel"
                   wrapText="true"
                   style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-alignment: center;"/>
        </VBox>

        <!-- Dua Card -->
        <VBox spacing="12"
              alignment="CENTER"
              style="-fx-background-color: #FFFFFF; -fx-padding: 25; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);"
              maxWidth="850">

            <Label text="Dua / Prayer"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #065F46;"/>

            <Label fx:id="duaLabel"
                   wrapText="true"
                   style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-alignment: center;"/>
        </VBox>

    </VBox>

    <!-- Bottom HBox for buttons -->
    <HBox spacing="10" alignment="CENTER" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="30">

        <Button text="← Back to Dashboard"
                onAction="#back"
                prefWidth="230" prefHeight="52"
                style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 14;"/>

        <Pane HBox.hgrow="ALWAYS"/>

        <Button text="→ TO DO LIST"
                onAction="#todo"
                prefWidth="230" prefHeight="52"
                style="-fx-background-color: #22C55E; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 14;"/>
    </HBox>

</AnchorPane>
