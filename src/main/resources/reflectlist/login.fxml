<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="reflectlist.LoginController"
            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #E0F2FE, #FCE7F3, #ECFEFF); -fx-padding: 40;">

    <VBox spacing="25" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- App Title -->
        <Label text="Welcome to Reflect List"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1F2937;"/>

        <!-- Tagline -->
        <Label text="An Islamic app to guide you with your mood"
               style="-fx-font-size: 18px; -fx-text-fill: #374151;"/>

        <!-- Login Card -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: #FFFFFF; -fx-padding: 32; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 16, 0, 0, 6);"
              maxWidth="400">

            <!-- Name Field -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Name:"
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1F2937;"/>
                <TextField fx:id="usernameField"
                           promptText="Enter your name"
                           style="-fx-font-size: 15px; -fx-padding: 12; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #CBD5E1;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Login Button -->
            <Button text="Login"
                    onAction="#login"
                    prefHeight="46"
                    style="-fx-background-color: #22C55E; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 14;"
                    maxWidth="Infinity"/>
        </VBox>
    </VBox>
</AnchorPane>
